<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashtreeAgen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar. -->
    <style name="WidgetToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="ToolbarIconBack">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/margin_padding_size_small</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">back</item>
    </style>

    <!-- Other. -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>
</resources>